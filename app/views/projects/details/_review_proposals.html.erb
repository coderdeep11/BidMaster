      <%=link_to "All proposals",all_proposals_project_details_path,remote: true%>
      <%="(#{bids.count}) "unless bids.count.zero?%>
    </li>
    <li class="shortlisted__users-tab">
      <%=link_to 'Shortlisted',shortlisted_project_details_path,remote: true%>
      <%="(#{shortlisted.count}) " unless shortlisted.count.zero?%>
