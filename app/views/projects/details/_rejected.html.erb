<ul class="rejected__users">
  <%rejected.each do|bid|%>
    <li class="proposal">
      <div class="user__image"><%=inline_svg_tag 'default_avatar.svg' %></div>
      <ul>
        <li>
          <%=bid.freelancer.name%>
        </li>
        <li>
          <span>$<%=bid.value%>/hr</span>
        </li>
        <li>
          <span>Proposal: </span>
          <%=bid.proposal.from(0).to(250)%>
        </li>
        <li class="time">
          <%=distance_of_time_in_words_to_now(bid.updated_at)%>
        </li>
      </ul>
      <div class="bid__status">
        <span class="stamp is-<%=bid.aasm_state%>"><%=bid.aasm_state%></span>
      </div>
    </li >
  <%end%>
</ul>
