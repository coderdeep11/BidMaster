if (document.querySelector(".user__bio"))
  document.querySelector(".user__bio").remove();
if (document.querySelector(".user__experience"))
  document.querySelector(".user__experience").remove();
if (document.querySelector(".user__details"))
  document.querySelector(".user__details").remove();
currentTab = document.querySelector(".user__details-tab");
if (document.querySelector(".welcome"))
  document.querySelector(".welcome").remove();
[...document.querySelector(".details__tab").children].forEach((element) => {
  if (element.classList[1] == "add__border-bottom" && element !== currentTab)
    element.classList.remove("add__border-bottom");
});
currentTab.classList.add("add__border-bottom");

document
  .querySelector(".user__analytics")
  .insertAdjacentHTML("beforebegin", `<%=j render 'details' %>`);
t = setTimeout(() => {
  document.querySelector(".user__details").classList.add("slide__in");
  clearTimeout(t);
}, 100);
