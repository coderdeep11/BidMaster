<% content_for :title, "Edit User details" %>
<section class="update-users-page">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <section class="update__form">
      <h1>Edit <%= resource_name.to_s.humanize %> details</h1>
      <!-- Name Field -->
      <div class="name__field">
        <i class="fad fa-user"></i>
        <%= f.text_field :name,placeholder: 'Name' %>
        <%unless resource.errors[:name].empty?%>
          <div class="errors">
            <i class="fas fa-exclamation-circle"></i>
            <%=  "name #{resource.errors[:name][0]} "%>
          </div>
        <%end%>
      </div>
      <!--Email Field -->
      <div class="email__field">
        <i class="fad fa-at"></i>
        <%= f.email_field :email, autocomplete: "email",placeholder: 'Email'  %>
        <%unless resource.errors[:email].empty?%>
          <div class="errors">
            <i class="fas fa-exclamation-circle"></i>
            <%=  "email #{resource.errors[:email][0]} "%>
          </div>
        <%end%>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <!--Password Field -->
      <div class="password__field">
        <i class="fad fa-lock"></i>
        <%= f.password_field :password, autocomplete: "new-password",placeholder: 'leave blank if you don\'t want to change password' %>
        <%unless resource.errors[:password].empty?%>
          <div class="errors">
            <i class="fas fa-exclamation-circle"></i>
            <%=  "password #{resource.errors[:password][0]} "%>
          </div>
        <%end%>
      </div>
      <!--confirm password -->
      <div class="password__confirmation-field">
        <i class="fad fa-lock"></i>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: 'Confirm password' %>
        <%unless resource.errors[:password_confirmation].empty?%>
          <div class="errors">
            <i class="fas fa-exclamation-circle"></i>
            <%=  "#{resource.errors[:password_confirmation][0]} "%>
          </div>
        <%end%>
      </div>
      <!-- Role field-->
      <div class="role__field">
        <p> <%= f.label :role,'change role:' %></p>
        <div class="f__btn">
          <%= f.radio_button :role ,"freelancer"%>
          Freelancer
        </div>
        <div  class="c__btn">
          <%=f.radio_button  :role, "client" %>
          Client
        </div>
        <%unless resource.errors[:role].empty?%>
          <div class="errors">
            <i class="fas fa-exclamation-circle"></i>
            <%= "role #{resource.errors[:role][0]} "%>
          </div>
        <%end%>
      </div>
      <!-- Image field -->
      <div class="image__field">
        <%= f.label :profile_image,'Add a Photo' %>
        <br/>
        <div class="file__field">
          <i class="fal fa-user-circle"></i>
          <%= f.file_field :profile_image %>
        </div>
      </div>
      <!---current password-->
      <div class="password__field">
        <i class="fad fa-lock"></i>
        <%= f.password_field :current_password, autocomplete: "current-password",placeholder: "your current password to confirm your changes" %>
        <%unless resource.errors[:current_password].empty?%>
          <div class="errors">
            <i class="fas fa-exclamation-circle"></i>
            <%=  "#{resource.errors[:current_password][0]} "%>
          </div>
        <%end%>
      </div>
      <%= f.submit "Update",class: 'btn' %>
    </section>
  <% end %>
</section>
