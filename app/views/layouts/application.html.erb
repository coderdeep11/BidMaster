<!DOCTYPE html>
<html>
  <head>
    <title>BidMaster</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://kit-pro.fontawesome.com/releases/v5.15.1/css/pro.min.css", 'data-turbolinks-track': 'reload, media="print"' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header> <%=link_to root_path do%>
        <%=image_tag "logo.png",class:'logo' %>
      <%end%>
    </header>
    <div class="search__bar">
      <%= search_form_for @q, url: search_results_path do |f|%>
        <%= f.label :name_cont,style:'display:none' %>
        <%= f.search_field :name_cont, placeholder: "Search", class: "form-control" %>
        <div class="input-group-btn">
          <%= button_tag class: ' btn-primary'   do%>
            <i class="fad fa-search"></i>
          <%end%>
        </div>
      <% end %>
    </div>
    <nav>
      <ul>
        <%if current_user%>
          <li>
            <%=link_to  conversations_path do%>
              <i class="fad fa-envelope"></i>
            <%end%>
          </li>
          <li>
            <%=link_to  notifications_path do%>
              <i class="fad fa-bell"></i>
            <%end%>
          </li>
          <li>
            <%=link_to  bid_history_projects_path do%>
              <i class="fad fa-history"></i>
            <%end%>
          </li>
          <li>
            <div class="user__avatar">
              <%=image_tag user_image(current_user.id)%>
              <%=link_to'', dropdown_profile_path,remote: true%>
            </div>
          </li>
        <%else%>
          <li>
            <%=link_to 'Login',new_user_session_path,class:'btn-primary'%>
          </li>
        <%end%>
      </ul>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
    <%= javascript_pack_tag 'login' %>
    <%= javascript_pack_tag 'form' %>
  </body>
</html>
