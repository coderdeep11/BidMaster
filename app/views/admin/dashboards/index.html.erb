 <%=  render 'sidebar'  %>
<div class="main-content">
  <main >
    <h2 class="dash-title">Overview</h2>
    <div class="dash-cards">
      <div class="card-single">
        <div class="card-body">
          <i class="far fa-users"></i>
          <div>
            <h5>Total Users</h5>
            <h4> <%= User.all.count %> </h4>
          </div>
        </div>
      </div>
      <div class="card-single">
        <div class="card-body">
          <i class="fad fa-users"></i>
          <div>
            <h5>Freelancers</h5>
            <h4> <%= User.where(role: 'freelancer').count %> </h4>
          </div>
        </div>
      </div>
      <div class="card-single">
        <div class="card-body">
          <i class="fad fa-users"></i>
          <div>
            <h5>Clients</h5>
            <h4> <%= User.where(role: 'client').count %> </h4>
          </div>
        </div>
      </div>
    </div>
    <section class="recent">
      <div class="activity-card">
        <h3>Dashboard</h3>
        <div class="table-responsive">
          <table>
            <thead>
              <tr>
                <th>Model Name</th>
                <th>Last used</th>
                <th>Total records </th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= link_to admin_users_path do %>
                    Users
                  <% end  %>
                </td>
                <td> <%= distance_of_time_in_words_to_now(User.last.try(:updated_at))  if User.last %>  </td>
                <td> <%= User.all.count %> </td>
              </tr>
              <tr>
                <td>
                  <%= link_to admin_projects_path do %>
                    Projects
                  <% end  %>
                </td>
                <td> <%= distance_of_time_in_words_to_now(Project.last.try(:updated_at)) if Project.last %>  </td>
                <td> <%= Project.all.count  %>  </td>
              </tr>
              <tr>
                <td>
                  <%= link_to admin_bids_path do %>
                    Bids
                  <% end  %>
                </td>
                <td> <%= distance_of_time_in_words_to_now(Bid.last.try(:updated_at)) if Bid.last %>  </td>
                <td> <%= Bid.all.count %> </td>
              </tr>
              <tr>
                <td>
                  <%= link_to admin_bidding_profiles_path do %>
                    Bidding Profile
                  <% end  %>
                </td>
                <td> <%= distance_of_time_in_words_to_now(BiddingProfile.last.try(:updated_at)) if BiddingProfile.last %>  </td>
                <td> <%= BiddingProfile.all.count %> </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </main>
</div>
