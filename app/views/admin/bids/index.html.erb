<%=render 'admin/dashboards/sidebar'%>
<div class="main-content">
  <main class="users">
    <h2 class="dash-title"><i class="fad fa-users"></i> Bids</h2>
    <section class="recent">
      <div class="activity-card">
        <%=link_to 'New Bid',new_admin_bid_path,class:'btn-primary'%>
        <div class="table-responsive">
          <table>
            <thead>
              <tr>
                <th>id</th>
                <th>freelancer</th>
                <th>value</th>
                <th>proposal</th>
                <th>actions</th>
              </tr>
            </thead>
            <tbody>
              <%@bids.each do |bid|%>
                <tr>
                  <td><%= bid.id%></td>
                  <td><%= bid.freelancer%></td>
                  <td><%=bid.value%></td>
                  <td><%=bid.proposal%></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </main>
</div>
